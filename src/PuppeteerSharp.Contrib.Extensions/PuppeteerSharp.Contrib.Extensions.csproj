<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Version>1.0.0</Version>
    <Authors>Henrik Lau Eriksson</Authors>
    <Description>
      Contributions to the Headless Chrome .NET API 🌐🧪

      PuppeteerSharp.Contrib.Extensions is a library with extension methods for writing tests with the Puppeteer Sharp API.
      It provides a convenient way to write readable and robust browser tests in .NET
    </Description>
    <PackageId>PuppeteerSharp.Contrib.Extensions</PackageId>
    <PackageProjectUrl>https://github.com/hlaueriksson/puppeteer-sharp-contrib</PackageProjectUrl>
    <PackageIconUrl>https://raw.githubusercontent.com/hlaueriksson/puppeteer-sharp-contrib/master/icon.png</PackageIconUrl>
    <PackageTags>headless;chrome;puppeteer;test;testing;automation</PackageTags>
    <RepositoryUrl>https://github.com/hlaueriksson/puppeteer-sharp-contrib.git</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
  </PropertyGroup>

  <PropertyGroup>
    <DocumentationFile>bin\$(Configuration)\netstandard2.0\PuppeteerSharp.Contrib.Extensions.xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="PuppeteerSharp" Version="1.*" />
  </ItemGroup>

</Project>
